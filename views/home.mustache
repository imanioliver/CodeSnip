{{#allSnippets}}




<div class="allSnippets">



<table>
    <tr>
        <td><h3>Title: </h3></td>
        <td><p>{{title}}</p></td>
    </tr>
    {{#description}}
    <tr>
        <td><h3>Description: </h3></td>
        <td><p>{{description}}</p></td>
    </tr>
    {{/description}}
    <tr>
        <td><h3>Language: </h3></td>
        <td><p>{{language}}</p></td>
    </tr>
    <tr>
        <td><h3>Code: </h3></td>
        <td><p><code>{{code}}</code></p></td>

    </tr>
    {{#tags}}
    <tr>
        <td><h3>Tags: </h3></td>
        <td> <a href="search/tags/{{.}}"><p>{{.}}</p> </a> </td>
    </tr>
    {{/tags}}


    {{#language}}
    <tr>
        <td><h3>Tags: </h3></td>
        <td> <a href="search/language/{{.}}"><p>{{.}}</p> </a> </td>
    </tr>
    {{/language}}


</table>
<hr>



</div>


